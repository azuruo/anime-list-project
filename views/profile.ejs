<!DOCTYPE html>
<html>
  <head>
    <title>User Profile</title>
  </head>
  <body>
    <h1>Welcome, <%= user.username %></h1>
    <p>Email: <%= user.email %></p>
    <a href="/auth/logout">Logout</a>
    <h2>Your Anime List:</h2>
    <ul>
      <% user.animeList.forEach(function(anime) { %>
      <li><%= anime.title %></li>
      <% }); %>
    </ul>
  </body>
</html>
