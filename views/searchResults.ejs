<!DOCTYPE html>
<html>
<body>
<% animeList.forEach(anime => { %>
  <div>
    <h3><%= anime.title %></h3>
    <p><%= anime.description %></p>
    <form action="/anime/add-to-my-list/<%= anime._id %>" method="post">
      <button type="submit">Add to my list</button>
    </form>
  </div>
<% }); %>
<script src="/js/frontend.js"></script>
</body>
</html>


